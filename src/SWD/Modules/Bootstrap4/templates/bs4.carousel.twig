<div id="{{ 'carousel-'~carousel.id ?? 'carousel' }}" class="carousel slide" data-ride="carousel">

    {# the indicators #}
    {% if carousel|length > 1 %}
        <ol class="carousel-indicators">
            {% for i in range (0, (carousel|length -1) ) %}
                <li data-target="#{{ 'carousel-'~carousel.id ?? 'carousel' }}" data-slide-to="{{ i }}"  class="{{ i == 0 ? 'active':'' }}"></li>
            {% endfor %}
        </ol>
    {% endif %}

    {# the slides! #}
    <div class="carousel-inner">
        {% for slide in carousel %}
            <div class="{{ loop.index0 == 0 ? 'active' : '' }} carousel-item"
                 data-type="App.Entities.File" data-id="{{ slide.image.id }}"
                 style="background-image:url('{{ slide.image.src ?? slide.image.url }}');"
            >
                <div class="container">
                    <div class="{{ 'text-'~slide.align }} carousel-caption ">
                        <h2>{{ slide.title }}</h2>
                        <p>{{ slide.description }}</p>
                        {% if slide.action or slide.href %}
                            <p><a class="btn btn-lg btn-primary" href="{{ slide.href }}" role="button">{{ slide.action ?? 'More...' }}</a></p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# prev / next #}
    {% if carousel|length > 1 %}
        <a class="carousel-control-prev" href="#{{ 'carousel-'~carousel.id ?? 'carousel' }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#{{ 'carousel-'~carousel.id ?? 'carousel' }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    {% endif %}
</div>