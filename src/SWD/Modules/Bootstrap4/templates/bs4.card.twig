<div class="card" data-type="{{ card|dotClass }}" data-id="{{ card.id }}">
    {% if card.image %}
        <img class="card-img-top" src="{{ card.image.url ?? card.image.src }}" alt="Card image cap">
    {% endif %}
    <div class="card-body">
        {% if card.title %}
            <h5 class="card-title">{{ card.title }}</h5>
        {% endif %}
        {% if card.description %}
            <p class="card-text">{{ card.description | markdown | purify |raw }}</p>
        {% endif %}
        {% if ( card.href ?? card.action )  %}
            <a href="{{ card.href ?? '#' }}" class="btn btn-primary">{{ card.action}}</a>
        {% endif %}
    </div>

</div>